<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerateQR">

    <ImageView
        android:id="@+id/QR_Image"
        android:layout_width="285dp"
        android:layout_height="280dp"
        android:layout_marginTop="132dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty_tall_divider" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="92dp"
        android:text="CONVERT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QR_Image" />

    <EditText
        android:id="@+id/edt_value"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QR_Image" />

    <TextView
        android:id="@+id/rider_pay_textview"
        android:layout_width="208dp"
        android:layout_height="52dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Please present QR code to Driver"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/QR_Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>